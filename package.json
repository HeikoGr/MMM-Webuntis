{
  "name": "mmm-webuntis",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HeikoGr/MMM-Webuntis"
  },
  "version": "0.6.0",
  "description": "MagicMirror module to access Webunits school timetables.",
  "main": "MMM-Webuntis.js",
  "keywords": [
    "MagicMirror",
    "webuntis",
    "school",
    "timetable"
  ],
  "author": "HeikoGr",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint": "eslint --ext .js && prettier --check .",
    "lint:fix": "eslint --fix && prettier --write .",
    "test": "node --run lint && jest",
    "test:unit": "jest",
    "test:spelling": "cspell .",
    "check": "node cli/node_helper_wrapper.js || true",
    "debug": "node cli/node_helper_wrapper.js",
    "preinstall:check": "node -e \"process.exit(require('fs').existsSync('node_modules') ? 0 : 1)\" && echo 'node_modules exists' || echo 'npm install needed'",
    "install:check": "npm list --depth=0 2>&1 | grep -q 'missing:' && echo 'Missing dependencies - run: npm install' || echo 'All dependencies installed'",
    "deps:check": "node scripts/check-deps.js"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "otplib": "^13.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "cspell": "^9.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-n": "^17.23.1",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  },
  "overrides": {
    "glob": "^10.4.5"
  }
}