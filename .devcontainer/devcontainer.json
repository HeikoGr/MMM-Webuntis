{
  "name": "MMM-Webuntis (MagicMirror Dev)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "workspaceFolder": "/opt/magic_mirror/modules/MMM-Webuntis",
  "workspaceMount": "source=${localWorkspaceFolder},target=/opt/magic_mirror/modules/MMM-Webuntis,type=bind",
  "overrideCommand": false,
  "runArgs": ["--shm-size=1g"],
  "shutdownAction": "stopContainer",
  "remoteUser": "root",
  "containerEnv": {
    "IN_DEVCONTAINER": "1",
    "PLAYWRIGHT_BROWSERS_PATH": "/tmp/playwright-browsers",
    "PLAYWRIGHT_CHROMIUM_ARGS": "--no-sandbox --disable-extensions --disable-dev-shm-usage --disable-gpu --no-first-run --no-default-browser-check"
  },
  "forwardPorts": [8080],
  "customizations": {
    "vscode": {
      "extensions": ["actboy168.tasks", "dbaeumer.vscode-eslint"],
      "settings": {
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "postCreateCommand": "/bin/sh .devcontainer/postCreate.sh",
  "postStartCommand": "echo 'Devcontainer started. MagicMirror at http://localhost:8080'"
}
